<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bdqn.model">
	 <class name="Film" table="t_film">
	 	<id name="id" column="f_id">
	 		<generator class="native"></generator>
	 	</id>
	 	<property name="name" column="f_name"></property>
	 	<property name="playDate" column="f_play_date"></property>
	 	<property name="price" column="f_price"></property>
	 </class>	
</hibernate-mapping>